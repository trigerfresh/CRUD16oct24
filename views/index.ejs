<%- include('layout/header')%>

<div class = "container">
    <div class = "row my-4">
        <div class="col-lg-12">
            
            <div class = "table-responsive">
                <% if(users != '') { %>
                    
                
                <table class = "table table-stripped text-center my-3">
                    <thead>
                        <tr class = "table-dark">
                           <th>ID</th>
                           <th>Image</th>
                           <th>Name</th>
                           <th>Email</th> 
                           <th>Phone</th>
                           <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach((row, index)=>{%>
                            <tr class = "align-middle">
                                <td><%= index+1 %></td>
                                <td><img src="/uploads/<%= row.image %>" width = "30"/></td>
                                <td><%= row.name %></td>
                                <td><%= row.email %></td>
                                <td><%= row.phone %></td>
                                <td>
                                    <a href="/edit/<%= row._id%>" class = "text-success"><i class = "fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= row._id%>" class = "text-danger"><i class = "fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <% } else { %>
                    <h1 class = "text-center text-secondary mt-5">No users found in database</h1>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer')%>